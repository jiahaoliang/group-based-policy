# Functions
# ---------

# init_gbpservice() - Initialize databases, etc.
function init_gbpservice {
    # Run GBP db migrations
    gbp-db-manage --config-file $NEUTRON_CONF --config-file /$Q_PLUGIN_CONF_FILE upgrade head
}

